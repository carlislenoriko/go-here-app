<h2>YO <%= @user.first_name %> WHAT'S GOOD</h2>
<div class="signup">
  <div>
    <%= image_tag @user.avatar.url %>
  </div>
  <div>
    <a href="/maps">UR MAPS</a><br>
    <a href="/maps/new">New Map?</a><br><br>
    <a href="/categories">Browse by Category</a><br><br>
  </div>
  <div>
    <h3>UR FRIENDS</h3>
    <% @friends.each do |friend| %>
      <a href="/users/<%= friend.id %>"> <%= friend.first_name %> </a><br>
    <% end %>
  </div><br>
  <div>
    <a href="/users/<%= @user.id %>/edit">Edit Your Profile</a><br>
    <a href="/logout">Logout</a>
  </div>
</div>