<script async defer
src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['API_KEY'] %>&callback=initMap">
</script>
<div ng-app="app">
  <div ng-controller="usersCtrl" id='angularInit' ng-init="setup(<%= @map.user.id %>, <%= @map.id %>)">
    <div id="map" class="big"></div>
  </div>
</div>


<div class="contact-info">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <% if @map.user_id == current_user.id %>
                          <div class="btn btn-default">
                            <%= link_to "Edit Map", {:action => "edit", :id => @map.id}, :method => :get %>
                          </div>
                          <div class="btn btn-default">
                            <%= link_to "New Pin", { :action => "new", :controller => "pins", :map_id => @map.id } %>
                          </div>
                          <div class="btn btn-default">
                            <%= link_to "Back to All Maps", {:action => "index", :controller => "maps"}, :method => :get %>
                          </div>
                          <div class="btn btn-default">
                            <%= link_to "Email Map", {:action => "email_map", :controller => "maps"}, :method => :post %>
                          </div>
                        <% else %>
                          <div class = "btn btn-default">
                            <%= link_to "Back to profile", {:action => "show", :controller => "users", :id => @map.user_id }, :method => :get%>
                          </div>
                        <% end %>
                    </div>
                    <div class="col-sm-6 contacts">
                        <div class="info">
                        <p class="contact-info-title"><i class="lnr lnr-map-marker"></i><%= @map.map_name %></p>
                        <span class="contact-info-text"><%= @map.description %></span>
                        </div>
                        <div class="info">
                        <p class="contact-info-title"><i class="lnr lnr-phone-handset"></i>By <%= @creator.first_name %> <%= @creator.last_name %></p>
                        <a href="/users/<%= @creator.id %>"  class="contact-info-text">Full Profile</a>
                        </div>
                        <div class="info last">
                        <p class="contact-info-title"><i class="lnr lnr-envelope"></i>Email</p>
                        <span class="contact-info-text"><%= @creator.email %></span>
                        </div>
                    </div>
                </div>
            </div><!-- / container -->
        </div><!-- / contact info 2col -->
        <!-- contact -->
        <div id="contact" class="full-width" data-section="contact">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form id="contactForm" data-toggle="validator">
                            <div class="row">
                                <div class="col-md-6">
                                  <h2>Locations Marked</h2>
                                    <div>
                                      <% @pins.each do |pin| %>
                                      <div>
                                        <b><%= pin.pin_name %></b><br>
                                        <p>About: <i><%= pin.description %></i><br>
                                        Approx. Address: <i><%= pin.address %></i><br></p>
                                        <% if @map.user_id == current_user.id %>
                                          <a href="/pins/<%= pin.id %>/edit">Edit Pin</a>
                                        <% end %>
                                      </div><br>
                                      <% end %>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div><!-- / container -->


