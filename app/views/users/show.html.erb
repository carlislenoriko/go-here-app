<div class="portfolio-header">
  <div class="header-content">
    <h3 class="animated fadeInDown"><%= @user.first_name %> <%= @user.last_name %></h3>
    <div class="separator-line animated fadeInUp"> </div>
  </div>
</div>



<div id="pricing" data-section="pricing">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="pricing-table">
                    <div class="pricing-table-title">
                        <h5 class="pricing-title"><%= @user.first_name %></h5>
                    </div>
                    <div class="pricing-table-content">
                        <ul>
                          <li><%= @user.email %></li>
                          <li><%= image_tag @user.avatar.url %></li>
                        </ul>
                    </div>
                    <div>
                      <% if current_user.id != @user.id && @friends.index(current_user.id)==nil %>
                        <div class="btn btn-default">
                          <%= link_to "Follow #{ @user.first_name }", {:action => "create", :controller => :friends, :id => @user.id }, :method => :create %>
                        </div>
                      <% elsif @friends.index(current_user.id) %>
                        <div>
                          You are following <%= @user.first_name %>
                        </div>
                      <% end %>
                    </div>
                </div><!-- / pricing-table -->
            </div>
            <div class="col-md-6">
                <div class="pricing-table">
                    <div class="pricing-table-title">
                        <h5 class="featured pricing-title">Maps</h5>
                    </div>
                    <div class="pricing-table-content">
                          <div>
                            <h3>Maps</h3>
                            <% @user.maps.each do |map| %>
                              <div>
                                <a href="/maps/<%= map.id %>"><%= map.map_name %></a>
                              </div>
                            <% end %>
                          </div>
                    </div>
                </div><!-- / pricing-table -->
            </div>
        </div>
    </div><!-- / container -->
</div><!-- / pricing section 3col -->
